{
    "compilerOptions": {
        "lib": ["es6", "dom"],
        "module": "commonjs",
        "rootDir": "..",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        "declaration": true,
        "declarationDir": "../../dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "exclude": [
        "../node_modules",
        "webpack"
    ]
}